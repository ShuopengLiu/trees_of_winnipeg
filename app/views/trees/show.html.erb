<div class="container-sm">
  <div class="row" style="margin-bottom: 50px;">
    <h1>Detailed Infomation of Tree <%= @tree.source_id%></h1>
  </div>

  <div class="row">
    <div class="col-sm">
        <p>
            <%= image_tag "https://maps.googleapis.com/maps/api/staticmap?zoom=17
              &size=400x300
              &center=#{@tree.latitude},#{@tree.longitude}
              &markers=color:red%7C#{@tree.latitude},#{@tree.longitude}
              &key=AIzaSyA4OXhP_ni_3629dBYljRa_LBLPtcinjGo", alt: "Map" %>
        </p>
    </div>
    <div class="col-sm">
      <p><strong>Diameter: </strong><%= @tree.diameter%></p>
      <p><strong>Botanical Name: </strong><%= link_to @tree.category.botanical_name, @tree.category%></p>
      <p><strong>Common Name: </strong><%= link_to @tree.category.common_name, @tree.category%></p>
      <p><strong>Park: </strong><%= link_to @tree.park.park_name, @tree.park%> </p>
      <p><strong>Neighbourhood: </strong><%= link_to @tree.neighbourhood.neighbourhood_name, @tree.neighbourhood%></p>
    </div>
  </div>
</div>




